{
  "name": "react-testing-tutorial",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/*.spec.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/__tests__/**",
      "!src/**/__mocks__/**",
      "!src/**/mocks/**",
      "!src/**/fixtures/**",
      "!src/**/stories/**",
      "!src/**/assets/**",
      "!src/**/styles/**",
      "!src/**/constants/**",
      "!src/setupTests.{js,ts}",
      "!src/reportWebVitals.{js,ts}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.types.{ts,tsx}",
      "!src/**/*.{css,scss,sass,less}",
      "!src/**/*.{svg,png,jpg,jpeg,gif,webp,ico}",
      "!src/components/hello.tsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/public/",
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "typescript": "^4.9.5"
  }
}
